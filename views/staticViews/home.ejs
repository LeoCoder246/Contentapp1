            <script>
                const text = "BlackWolf is not just a video streaming website. It’s a full educational experience that blends multimedia with knowledge summaries, facts, and notes — all in one place. We believe that students learn better when they watch and read together. That’s why each video you watch is supported by facts, summaries, and even downloadable content. From science concepts to general knowledge, we are building a library of content that is fun, engaging, and meaningful.";

                const words = text.split(" ");
                let index = 0;
                let displayText = "";

                function showNextWord() {
                    if (index < words.length) {
                        displayText += words[index] + " ";
                        document.getElementById("wordDisplay").textContent = displayText;
                        index++;
                    } else {
                        // Reset after short pause
                        setTimeout(() => {
                            displayText = "";
                            document.getElementById("wordDisplay").textContent = "";
                            index = 0;
                        }, 0);
                    }
                }

                document.addEventListener("DOMContentLoaded", function () {
                    setInterval(showNextWord, 300);
                });

                document.getElementById("toggleButton").addEventListener("click", function () {
                    let sidebar = document.getElementById("videoSidebar");
                    if (sidebar.style.display === "none" || sidebar.style.display === "") {
                        sidebar.style.display = "block"; // Show
                    } else {
                        sidebar.style.display = "none"; // Hide
                    }
                });
            </script>


