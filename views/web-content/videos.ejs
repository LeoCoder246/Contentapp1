<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content Streaming Navbar</title>
    <link rel="stylesheet" href="/css/navbarStyles.css" />
    <link rel="stylesheet" href="/css/videoStyles.css" />
  </head>
  <body>
    <%- include ('../partials/header-sidebar.ejs') -%>
    <div class="main-content" >
  
        
        <div class="container1"  style="width: 94%; height: 100%;" >
          
     <div class="category-video-main" > 
      <div class="category-container js-category-container">
        Categorys
      </div>
       
      <ul class=" js-category-main ">
       
    
    </ul>

     </div>
          <div class="container">
            <% videos.forEach(video => { %>
              <a href="/content/video/<%= video.videoCategory%>/<%= video._id %>" class="card-link">
              <div class="card">
              <img src="<%= video.imageUrl %>" alt="Card Image" class="card-image" />
          
              <div class="card-content">
                <h3 class="card-title"><%= video.title %></h3>
                <p class="card-text">
                 <%= video.description %>
                </p>
                 <div style="display: flex; flex-direction: row; justify-content: space-between;">
                  <div><%= video.createdBy.username %></div>
                  <div><%= new Date(video.createdAt).toLocaleDateString() %></div>
                 
                 </div>
              </div>
            </div>
          </a>
            <%})%>
        
  
          </div>
       </div>
      
   
        <div class="video-sidebar" id="videoSidebar">
          <div class="sidebar-title">NOTICES <%= notices.length %></div>
          <div class="notice-container">
            <% notices.forEach(notice => { %>
              <div class="notice-item">
                <div class="notice-info-container">
                  <div style="font-size: 13px; color: rgb(134, 132, 132);"><%= notice.createdBy.username %></div>
                  <div style="font-size: 11px; color: rgb(162, 161, 161);"><%= new Date(notice.createdAt).toLocaleDateString() %></div>
                </div>
                <pre class="notice-text"><%= notice.notice %></pre>
             
              </div>
            <% }) %>
          </div>
         <% if (user.role === 'admin') {%>
          <div class="notics-form">
            <form action="/content/notice" method="POST" style="display: flex; flex-direction: row;">
            
                <input class="notice-input" type="text" name="notice" placeholder="Enter Notice">
                <button type="submit" style="height: 30px; width: 30px; border: none; background: none; cursor: pointer; ">
                    <img   src="/icons/arrow-right.png" width="30px" style="margin-top: 4px;" alt="Send">
                </button>
            </form>
        </div>
        <% } %>
        </div>
    
    </div>
    <script src="/js/script.js"></script>
  </body>
</html>
